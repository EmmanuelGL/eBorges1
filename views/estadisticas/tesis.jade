extends ../templates/default
block content
   div.ingreso(style='margin-top:50px')
      div.panel
        div.box-body(style='min-height: 700px; ')
          div.jumbotron(style='background: white')
            div.container
                div.row
                    div.col-md-3
                        div.well.well-sm
                            form.form-horizontal(action='/estadisticas/tesis', method='post')
                                a.text-center Estadística
                                div
                                    select.form-control(name='Busqueda',onChange="this.form.submit()")
                                        option='Elige una opción'
                                        option='Departamento'  
                                        option='Especialidad'
                                        option='Grado'
                                        option='Genero'
                                        option='DeptoGrados'
                                        option='EspecialidadDeptos'
                    div.col-md-4(style='float: right;')
                        div.well.well-sm
                            form.form-horizontal(action='/estadisticas/tesis', method='post')
                                a.text-center Periodo
                                div.input-group
                                      span.input-group-addon
                                        i.glyphicon.glyphicon-calendar
                                      input#msg.form-control(type="month" name="mes" min="1960-01" placeholder='Introdusca un año')
                div.nav-tabs-custom
                  ul.nav.nav-tabs.pull-right
                    li(ng-show='!graph.selected.isSpecial')
                      a(href='javascript:;', data-target='#donut', data-toggle='tab')
                        i.fa.fa-pie-chart(aria-hidden='true')
                        |  DONA
                    li.active
                      a#tab-special(href='javascript:;', data-target='#bar', data-toggle='tab')
                        i.fa.fa-bar-chart(aria-hidden='true')
                        |  BARRAS


                        
                div(class='col-md-10 col-md-offset-4')  
                h1 Gráfica #{title}
                
                script(src='../javascripts/graficas.js')
                #container
                    //desde Aaqui no se aprecia
                    div(class='col-md-10 col-md-offset-3') 
                    //la identacion no se muestra la tabla
                    table#datatable
                        thead
                            tr
                                th #{Title}
                                th Total
                                //-if(items)
                                    -each item in items
                                            th= item.Field    
                        tbody
                            -if(items1)
                                    -for item1 in items1
                                        tr
                                            -for val,key in item1
                                                td.text-center #{val}
                    