extends ../templates/default
include ../templates/dependencies
link(rel='stylesheet', href='/stylesheets/tab.css')
block content
  script(src='http://c.fzilla.com/1286136086-jquery.js')
  script(src='http://c.fzilla.com/1291523190-jpaginate.js')
  script.
      $(document).ready(function(){
      $("#content").jPaginate();
      });
  style(type='text/css').
      .pagination{
      list-style:none;
      margin:0 px;
      padding: 0 px;
      align-content: center;
      }
      .pagination li{
      float: left;
      margin: 3 px;
      }
      .pagination li a{
      display:block;
      padding: 3 px 5 px;
      color: #fff;
      background-color: #44b0dd;
      text-decoration:none;
      
      }
      .pagination li a.activate{
      border: 1 px solid #000;
      color: #000;
      background-color: #fff;
      
      }
      .pagination li a.inactive{
      background-color: #eee;
      color: #777;
      border: 1 px solid #ccc;
      }   
  div.ingreso(style='margin-top:50px')
      div.panel
        div.box-body(style='min-height: 700px; ')
          div.jumbotron(style='background: white')
            div.container
                div.row
                    div.col-md-3
                        div.well.well-sm
                            form.form-horizontal(action='/tablas/tesis', method='post')
                                a.text-cente Ordenar
                                div
                                    select.form-control(name='Busqueda')
                                        option='Elige una opción'
                                        option='Alunmo'  
                                        option='Titulo'
                                        option='Clasificación'
                                        option='Especialidad'
                                        option='Departamento'
                                        option='Grado'
                                        option='Fecha de Publicación'
                                        option='Directores'
                                        option='Sinodales'
                    div.col-md-7(style='padding-top: 15px;')
                        div.pull-right
                            button.btn.btn-primary CONSULTA AVANZADA                 
                                   
                -if(items)
                    ul#content.row-fluid(style="list-style-type:none")
                        -for item in items
                            li.span4(data-color='gray')
                                div.thumbnail
                                    div.panel-heading
                                        h3
                                         a #{item.TITULO}
                                    div.caption  
                                        p       
                                            b Alumno:
                                            td #{item.ALUMNO} 
                                        p
                                            b Clasificación:
                                            td #{item.clasificacion}
                                            td #{item.clasificacion1}

                                        p
                                            b Especialidad:
                                            td #{item.especialidad}
                                        p
                                            b Departamento:
                                            td #{item.DEPARTAMENTO}
                                        p
                                            b Grado:
                                            td #{item.GRADO}
                                        p
                                            b Fecha de Publicación:
                                            td #{item.fechapublicacion} 
                                        p
                                            b Directores:
                                            td   #{item.DIRECTOR} 
                                            td   #{item.DIRECTOR1}
                                            td   #{item.DIRECTOR2} 
                                            td   #{item.DIRECTOR3}
                                            td   #{item.DIRECTOR4}                                          
                                        p
                                            b Sinodales:
                                            td  #{item.SINODAL}
                                            td  #{item.SINODAL1}
                                            td  #{item.SINODAL2}
                                            td  #{item.SINODAL3}
                                            td  #{item.SINODAL4}                   
               
                                       
                                       
                                        
                                                           
                                   
                                            
                           
                                
                                
                                
                                        
                        
                                            